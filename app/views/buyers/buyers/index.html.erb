<p id="notice"><%= notice %></p>

<h1>Buyers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.name %></td>
        <td><%= buyer.email %></td>

        <td><%= link_to 'Show', [:buyers, buyer] %></td>
        <td><%= link_to 'Edit', edit_buyers_buyer_path(store) %></td>
        <td><%= link_to 'Destroy', [:buyers, buyer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

