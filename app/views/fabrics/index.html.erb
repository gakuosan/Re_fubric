<p id="notice"><%= notice %></p>

<h1>Fabrics</h1>

<table>
  <thead>
    <tr>
      <th>Fabric color</th>
      <th>Fabric weight</th>
      <th>Fabric yarn count</th>
      <th>Fabric knitting way</th>
      <th>Fabric price</th>
      <th>Fabric composition</th>
      <th>Fabric</th>
      <th>Fabric count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fabrics.each do |fabric| %>
      <tr>
        <td><%= fabric.fabric_color %></td>
        <td><%= fabric.fabric_weight %></td>
        <td><%= fabric.fabric_yarn_count %></td>
        <td><%= fabric.fabric_knitting_way %></td>
        <td><%= fabric.fabric_price %></td>
        <td><%= fabric.fabric_composition %></td>
        <td><%= fabric.fabric_id %></td>
        <td><%= fabric.fabric_count %></td>
        <td><%= link_to 'Show', fabric %></td>
        <td><%= link_to 'Edit', edit_fabric_path(fabric) %></td>
        <td><%= link_to 'Destroy', fabric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fabric', new_fabric_path %>
