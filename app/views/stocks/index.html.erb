<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Fabric</th>
      <th>Fabric meter count</th>
      <th>Religion</th>
      <th>Shipping date</th>
      <th>Fabric price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.fabric_id %></td>
        <td><%= stock.fabric_meter_count %></td>
        <td><%= stock.religion %></td>
        <td><%= stock.shipping_date %></td>
        <td><%= stock.fabric_price %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

